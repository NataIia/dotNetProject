@model uuregistration.Models.AllUsersViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Voornaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Achternaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Departement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.RoleView)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.GetAllUsersView)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <th>
                @Html.DisplayFor(model => item.Departement.departementCode)
            </th>
            <th>
                @Html.DisplayFor(model => item.Roles)
            </th>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Login }) |
                @Html.ActionLink("Roles", "UserRoles", new { id = item.Login }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Login })
            </td>
        </tr>
    }
</table>
