<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Uur registratie en facturatie systeem</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/MyStyle.css")
    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Uur registratie en facturatie systeem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li> <!--appearing name, page name, controller name -->
                    <li>@Html.ActionLink("About", "About", "Home")</li> <!--appearing name, page name, controller name -->
                    <li>@Html.ActionLink("Uur registratie", "Index", "UurRegistraties")</li> <!--appearing name, page name, controller name -->
                    <li>@Html.ActionLink("Facturatie", "Index", "Factuurs")</li> <!--appearing name, page name, controller name -->
                    <li>@Html.ActionLink("Klanten", "Index", "Klants")</li> <!--appearing name, page name, controller name -->
<!--                    if (User.IsInRole("testrol2")) -->
                    
                        <li>@Html.ActionLink("Gebruikers", "Index", "Gebruikers")</li><!--appearing name, page name, controller name -->
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Resource.ProjectNaam</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
